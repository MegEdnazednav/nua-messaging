<div class='inbox-outbox-title pb-3 d-flex justify-content-between'>
  <div>
    <%= params[:box] == 'outbox' ? 'OUTBOX' : 'INBOX' %> OF <%= @current_user.full_name.upcase %></div>
  <% if params[:box] != 'outbox' %>
    <%= link_to new_message_path(@current_user) do %>
      <button type="button" class="btn btn-primary"> + New message</button>
    <% end %>
  <% end %>
</div>
<% if messages.any? %>
  <% messages.each do |message| %>
    <%= link_to message_path(message) do %>
      <div class="media text-muted align-items-center">
        <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
        <div class="<%= 'bg-unread' if !message.read && params[:box] != 'outbox' %> media-body p-2 small lh-125 border-bottom border-gray d-flex justify-content-between">
          <div>
            <strong class="d-block text-gray-dark">
              <% if params[:box] == 'outbox' %>
                to: <% if message.inbox.user.is_doctor? %>Dr. <% end %><%= message.inbox.user.full_name %></strong>
              <% else %>
                from: <% if message.outbox.user.is_doctor? %>Dr. <% end %><%= message.outbox.user.full_name %></strong>
              <% end %>
            <%= message.body.truncate(65) %>
          </div>
          <div>
            <span>sent: <%= message.created_at.strftime("%d-%m-'%y") %></span>
            <% if !message.read && params[:box] != 'outbox' %>
              <div class="unread">UNREAD</div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div class="mt-3">No messages!</div>
<% end %>



